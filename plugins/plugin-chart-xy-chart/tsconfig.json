{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "declarationDir": "lib",
    "esModuleInterop": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "lib": ["es6", "dom", "es2016", "es2019"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "lib",
    "test"
  ],
  "extends": "../../tsconfig.options.json",
  "include": [
    "./src/**/*",
    "./types/**/*",
    "../../types/**/*"
  ],
  "references": [
    {
      "path": "../../packages/superset-ui-chart-controls"
    },
    {
      "path": "../../packages/superset-ui-core"
    }
  ],

  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },


}
